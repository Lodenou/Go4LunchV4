<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lunchbg"
    tools:context=".ui.activities.ConnexionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="-114dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleX="1.1"
            android:scaleY="1.0"
            android:src="@drawable/bowl_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Go4Lunch"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Find a nice restaurant and invite your coworkers for lunch"
            android:textColor="#ffffff"
            android:textSize="12.5sp"
            android:textStyle="italic">

        </TextView>

        <FrameLayout
            android:id="@+id/FrameLayout1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button_fb"
                android:layout_width="292dp"
                android:layout_height="49dp"
                android:background="@drawable/rounded_button_fb"
                android:layout_gravity="center_horizontal"
                android:minHeight="45dp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/google_button"
                android:layout_width="292dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_google"
                android:clickable="true"
                android:drawableStart="@drawable/icon_google"
                android:focusable="true"
                android:fontFamily="@fonts/roboto_regular"
                android:paddingStart="15dp"
                android:text="Sign in with google"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

        </FrameLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>